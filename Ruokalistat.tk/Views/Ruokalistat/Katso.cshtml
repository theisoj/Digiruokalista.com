<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script>function Takaisin() {
        window.location.href = "/Ruokalistat";
    }
    var rullasNappi = document.getElementById("rullausIcon");

    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            rullasNappi.style.display = "block";
        } else {
            rullasNappi.style.display = "none";
        }
    }
    function rullaaYlos() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
    $(document).ready(function () {
        if (sessionStorage['page'] == document.URL) {
            document.body.scrollTop = sessionStorage['scrollTop'];
            document.documentElement.scrollTop = sessionStorage['scrollTop'];
        }
        $(document).scroll(function () {
            sessionStorage['page'] = document.URL;
            sessionStorage['scrollTop'] = $(document).scrollTop();
        });
    });</script>
