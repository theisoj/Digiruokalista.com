@{
    var top3 = Model.Ruokalista.Kategoriat.SelectMany(kat => kat.Ruuat, (kat, ruoka) => new { kat, ruoka })
        .Where(o => o.ruoka.TykkayksetCount > 0).Select(o => o.ruoka).OrderByDescending(o => o.TykkayksetCount).Take(3).ToList();
    @if (top3.Count > 0)
    {
        <h5>Top 3</h5>
    }
    int index = 1;
    <ul class="list-group" style="max-width: fit-content;">
        @foreach (var top in top3)
        {
            <li class="list-group-item list-group-item-primary"><a href="#ruoka-@top.ID ">@string.Format("{0}. {1} ({2})", index, top.Nimi, top.TykkayksetCount)</a></li>
            index++;
        }
    </ul>

}
